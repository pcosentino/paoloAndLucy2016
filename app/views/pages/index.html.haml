.container
	= render partial: "/pages/navigation"

#myCarousel.carousel.slide{"data-ride" => "carousel"}
	/ Indicators
	%ol.carousel-indicators
		%li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "3", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "4", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "5", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "6", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "7", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "8", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "9", "data-target" => "#myCarousel"}
		%li{"data-slide-to" => "10", "data-target" => "#myCarousel"}
	/ Wrapper for slides
	.carousel-inner{:role => "listbox"}
		.item.active
			%img{:alt => "one", :src => "assets/slide1.jpg"}
		.item
			%img{:alt => "two", :src => "assets/slide2.jpg"}
		.item
			%img{:alt => "three", :src => "assets/slide3.jpg"}
		.item
			%img{:alt => "four", :src => "assets/slide4.jpg"}
		.item
			%img{:alt => "five", :src => "assets/slide5.jpg"}
		.item
			%img{:alt => "six", :src => "assets/slide6.jpg"}
		.item
			%img{:alt => "seven", :src => "assets/slide7.jpg"}
		.item
			%img{:alt => "eight", :src => "assets/slide8.jpg"}
		.item
			%img{:alt => "nine", :src => "assets/slide9.jpg"}
		.item
			%img{:alt => "ten", :src => "assets/slide10.jpg"}
	/ Left and right controls
	%a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
		%span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
		%span.sr-only Previous
	%a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
		%span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
		%span.sr-only Next